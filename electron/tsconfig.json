{
    "compilerOptions": {
        "alwaysStrict": true,
        "lib": ["dom", "es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "outDir": "../main"
    },
    "extends": "../tsconfig.json",
    "include": ["**/*.js", "**/*.d.ts", "**/*.ts", "**/*.tsx"]
}
